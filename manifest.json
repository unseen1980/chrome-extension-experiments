{
    "name": "plugin name",
    "version": "0",
    "description": "What do I do as an extension",
    "background": { "page": "background.html" },
    "manifest_version": 2,
    "browser_action": {
        "name": "Manipulate DOM",
        "icons": ["icon.png"],
        "default_icon": "icon.png"
    },
    "content_scripts": [{
        "js": ["jquery-3.1.1.min.js", "background.js"],
        "css": ["style.css"],
        "matches": ["http://*/*", "https://www.reddit.com/*"]
    }]
}